  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PyTest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "dqchat/validator/metrics/tests"
      ],
      "justMyCode": false
    },
    {
      "name": "Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "DQChat (Trainer)",
      "type": "debugpy",
      "request": "launch",
      "module": "dqchat",
      "args": [
        "--mode",
        "train",
        "--dataset-config",
        "question-answer",
        "--cache-dir",
        "/home/work/.nlp-data/.cache"
      ],
      "justMyCode": false
    },
    {
      "name": "DQChat (RAFT Dataset Builder)",
      "type": "debugpy",
      "request": "launch",
      "module": "dqchat",
      "args": [
        "--mode",
        "raft_dataset",
        "--cache-dir",
        "/home/work/.nlp-data/.cache"
      ],
      "justMyCode": false
    }
  ]
}
